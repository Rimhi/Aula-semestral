<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="monterrosa.ricardo.aprendermaps.RegistroActivity"
    android:orientation="vertical"
    android:background="@color/colorAccent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#fff9e0"
            android:text="Registro"
            android:gravity="center"
            android:padding="10dp"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/RegistroNombreInspector"
            android:hint="  Nombre Completo"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_name"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/RegistroCorreoInspector"
            android:hint="  Correo Electronico"
            android:inputType="textEmailAddress"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_email_registro"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/RegistroContrase単aInspector"
            android:hint="  Contrase単a"
            android:inputType="textPassword"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_lock"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/RegistroRepetirContrase単aInspector"
            android:hint="  Repite tu Contrase単a"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock"/>
        <EditText
            android:layout_width="300dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="  Cedula"
            android:id="@+id/RegistroCedula"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_chat"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="  Telefono de Contacto"
            android:id="@+id/RegistroTelefono"
            android:inputType="phone"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_contact_phone"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="  Direccion de Residencia"
            android:inputType="textMultiLine"
            android:id="@+id/RegistroDireccion"
            android:background="@drawable/redondo"
            android:padding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_direccion"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargar foto"
            android:onClick="ObtenerUri"
            android:padding="10dp"
            android:gravity="center"
            android:drawableTop="@drawable/ic_insert_photo"/>
        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/RegistroImagen"
            android:layout_gravity="center"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Si la imagen aun no carga haz click aqui"
            android:gravity="center"
            android:onClick="SubirArchivosAStorage"
            android:visibility="invisible"
            android:id="@+id/RegistroSubirimagen"
            android:drawableTop="@drawable/ic_file_upload"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:onClick="registrar"
            android:drawableTop="@drawable/ic_person_add"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ya tengo una cuenta"
            android:textColor="#000"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:onClick="irInicio"
            android:drawableTop="@drawable/ic_exit"/>
    </LinearLayout>

</ScrollView>
