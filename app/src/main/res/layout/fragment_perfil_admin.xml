<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="monterrosa.ricardo.aprendermaps.Admin.AdminPerfilFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cargar Foto"
                android:padding="10dp"
                android:visibility="invisible"
                android:drawableTop="@drawable/ic_insert_photo"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:id="@+id/editarfotoadmin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Presiona aqui si la foto no ha cargado"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="invisible"
                android:drawableTop="@drawable/ic_file_upload"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Nombre Completo"
                android:id="@+id/editarnombreadmin"
                android:drawableLeft="@drawable/ic_name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Cedula"
                android:id="@+id/editarcedulaadmin"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_chat"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Celular"
                android:inputType="number"
                android:id="@+id/editarcelularadmin"
                android:drawableLeft="@drawable/ic_contact_phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Direccion de residencia"
                android:id="@+id/editardireccionadmin"
                android:drawableLeft="@drawable/ic_direccion"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Editar"
                android:layout_marginTop="5dp"
                android:id="@+id/Editarpefiladmin"
                android:drawableTop="@drawable/ic_edit_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion de ingreso"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Correo Electronico"
                android:id="@+id/editarcorreoelectronicoadmin"
                android:focusable="false"
                android:drawableLeft="@drawable/ic_email_registro"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Contrase単a"
                android:id="@+id/editarcontrase単aadmin"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_lock"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Repite la Contrae単a"
                android:inputType="textPassword"
                android:id="@+id/editarrepetircontrase単aadmin"
                android:drawableLeft="@drawable/ic_lock"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginTop="5dp"
                android:id="@+id/editaringresoadmin"
                android:drawableTop="@drawable/ic_edit_black_24dp"/>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
