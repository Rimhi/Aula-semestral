<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="monterrosa.ricardo.aprendermaps.MainActivity">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/correoInspector"
         android:hint="CORREO ELECTRONICO"/>
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/contraseñaInspector"
         android:hint="Contraseña"
         android:inputType="textPassword"/>


     <Button
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="ir a mapa de inspector"
         android:onClick="irMapInspector"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="olvide mi contraseña"
         android:gravity="center"
         android:layout_marginTop="30dp"
         android:onClick="recuperarcontraseña"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="60dp"
         android:text="¿Aun no tienes tu cuenta?  Registrate pulsando aqui ..."
         android:id="@+id/irRegistro"
         android:textColor="#700202"
         android:onClick="onclick"
         android:gravity="center"/>

</LinearLayout>
