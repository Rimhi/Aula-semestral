<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="monterrosa.ricardo.aprendermaps.MainActivity">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/correoInspector"
         android:hint="  Correo Electronico"
         android:drawableLeft="@drawable/ic_persona"/>
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/contraseñaInspector"
         android:hint="  Contraseña"
         android:inputType="textPassword"
         android:drawableLeft="@drawable/ic_key"/>


     <Button
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Iniciar Sesion"
         android:onClick="irMapInspector"
         android:drawableTop="@drawable/ic_lock_open" />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="olvide mi contraseña"
         android:textSize="18dp"
         android:gravity="center"
         android:layout_marginTop="30dp"
         android:onClick="recuperarcontraseña"
         android:drawableTop="@drawable/ic_key"
         android:textColor="@color/colorPrimary"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="60dp"
         android:text="¿Aun no tienes tu cuenta?  Registrate pulsando aqui ..."
         android:id="@+id/irRegistro"
         android:textColor="@color/colorPrimary"
         android:onClick="onclick"
         android:gravity="center"
         android:drawableBottom="@drawable/ic_person_add"
         android:textSize="17dp"/>

</LinearLayout>
